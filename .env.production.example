# Multiple Supabase Storage Configuration for A5 Gallery

# Primary Supabase Project (Storage 1)
VITE_SUPABASE_URL_1=https://your-project-1-id.supabase.co
VITE_SUPABASE_ANON_KEY_1=your-anon-key-1
VITE_STORAGE_BUCKET_1=gallery-uploads-1

# Secondary Supabase Project (Storage 2)
VITE_SUPABASE_URL_2=https://your-project-2-id.supabase.co
VITE_SUPABASE_ANON_KEY_2=your-anon-key-2
VITE_STORAGE_BUCKET_2=gallery-uploads-2

# Third Supabase Project (Storage 3)
VITE_SUPABASE_URL_3=https://your-project-3-id.supabase.co
VITE_SUPABASE_ANON_KEY_3=your-anon-key-3
VITE_STORAGE_BUCKET_3=gallery-uploads-3

# Fourth Supabase Project (Storage 4)
VITE_SUPABASE_URL_4=https://your-project-4-id.supabase.co
VITE_SUPABASE_ANON_KEY_4=your-anon-key-4
VITE_STORAGE_BUCKET_4=gallery-uploads-4

# Default/Primary Configuration (fallback)
VITE_SUPABASE_URL=https://your-primary-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-primary-anon-key
VITE_STORAGE_BUCKET=gallery-uploads

# Storage Selection Strategy
VITE_STORAGE_STRATEGY=load_balance # Options: load_balance, primary_first, random
VITE_DEFAULT_STORAGE=1 # Which storage to use as default (1-4)

# Upload Distribution Settings
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,mp4,mov,avi

# App Configuration
VITE_APP_NAME=A5 Gallery
VITE_APP_URL=https://your-domain.com